# Makefile generated by OpenAI ChatGPT


# Specify the compiler to use
CC = clang++

# Get the name of the first source file passed as an argument
# and remove the .cpp extension
TARGET = $(basename $(firstword $(MAKECMDGOALS)))

# Specify the source files to compile
SRCS = $(TARGET).cpp ../nutils.cpp

# Specify the header files to link to
HEADERS = -I. -I../

# Compile and link the source files
$(TARGET): $(SRCS)
	$(CC) $(SRCS) $(HEADERS) -o $(TARGET)

# Allow for arguments to be passed without the .cpp extension
.PHONY: $(TARGET)

